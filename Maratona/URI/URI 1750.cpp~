#include <bits/stdc++.h>

using namespace std;

int main(){
  int n;
  while(scanf("%d", &n) != EOF){
    int vet[n], mark[n];
    for(int i = 0; i < n; i++){
      scanf("%d", &vet[i]);
    }
    sort(vet, vet + n);
    puts("VETOR ORDENADO:");
    for(int i = 0; i < n; i++){
      printf("%d ", vet[i]);
    }
    puts("");
    int ans = 0, aux = 0;
    int last_couple = -1;
    memset(mark, 0, sizeof mark);
    for(int i = n - 1; i >= 0; i--){
      if(mark[i] == true) continue;
      mark[i] = true; aux = 1e9;
      for(int j = 0; j < i; j++){//vendo o melhor para o candidato i
	if(mark[j]) continue;
	if(aux > min(fabs(vet[i] - vet[j]), 24 - fabs(vet[i] - vet[j]))){
	  last_couple = j;
	  aux = min(fabs(vet[i] - vet[j]), 24 - fabs(vet[i] - vet[j]));
	}
      }
      /*printf("o melhor candidato pra %d(VET %d) foi %d(VET %d) com soma %d\n", i,vet[i], last_couple, vet[last_couple], aux);*/
      mark[last_couple] = true;
      ans += aux;
    }
    int ans2 = 0;
    for(int i = 1; i < n; i++){
      ans2 += min(fabs(vet[i] - vet[i - 1]), 24 - fabs(vet[i] - vet[i - 1]));
    }
    printf("ans eh %d e ans2 eh %d\n", ans, ans2);
    printf("%d\n", min(ans, ans2));
  }
  return 0;
}
